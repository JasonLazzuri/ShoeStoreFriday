<h2>Brands</h2>
<hr>
<br>

<% if @brands == [] %>

<p>There are currently no brands in the database</p>

<% else %>

<p>Current Brands</p>
<ul>

  <% @brands.each() do |brand| %>

  <li><%= brand.name %> $<%= brand.price %>0</li>

  <% end %>

</ul>

<% end %>

<h3> Add an brand: </h3>
<form action="/brands" method="post">
  <label for="brand_name">Brand Name:  </label>
  <input type="text" name="brand_name" placeholder="Name" id="brand_name">
  <input type="text" name="brand_price" placeholder="Price" id="brand_price">
  <button type="submit">Add Brand + Price</button>
</form>
