<h2>Stores</h2>
<hr>
<br>

<% if @store == [] %>

<p>There are currently no stores in the database</p>

<% else %>

<p>Current Stores</p>
<ul>

  <% @store.each() do |store| %>

  <li><a href="/store/<%= store.id() %>"><%= store.name() %></a></li>

  <% end %>

</ul>

<% end %>

<h3> Add a Store: </h3>
<form action="/store/:id" method="post">
  <label for="store_name">Store Name: </label>
  <input type="text" name="store_name" id="store_name">
  <button type="submit">Add Store</button>
</form>
